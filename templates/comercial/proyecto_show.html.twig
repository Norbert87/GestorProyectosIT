{% extends 'base.html.twig' %}

{% block title %}Proyecto{% endblock %}

{% block body %}
    <h1>Proyecto</h1>

    {%for message in	app.flashes('notice') %}
        <div class="flash-notice"><div class="alert alert-danger">	{{message}}	</div></div>
    {% endfor %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ proyecto.id }}</td>
            </tr>
            <tr>
                <th>Fecha entrega</th>
                <td>{{ proyecto.presupuesto.fechaEntrega|date('d-m-Y') }}</td>
            </tr>
            <tr>
                <th>TokenPublico</th>
                <td>{{ proyecto.tokenPublico }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ proyecto.estado }}</td>
            </tr>
            <tr>
                <th>Progreso</th>
                <td>{{ progreso }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comercial_presupuesto_index') }}">Volver</a>

{% endblock %}
